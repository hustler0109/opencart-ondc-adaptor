{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ONDC on_confirm Schema",
    "type": "object",
    "properties": {
      "context": {
        "type": "object",
        "properties": {
          "domain": { "type": "string" },
          "country": { "type": "string" },
          "city": { "type": "string" },
          "action": { "type": "string", "const": "on_confirm" },
          "core_version": { "type": "string" },
          "bap_id": { "type": "string" },
          "bap_uri": { "type": "string" },
          "bpp_id": { "type": "string" },
          "bpp_uri": { "type": "string" },
          "transaction_id": { "type": "string" },
          "message_id": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" }
        },
        "required": [
          "domain",
          "country",
          "city",
          "action",
          "core_version",
          "bap_id",
          "bap_uri",
          "bpp_id",
          "bpp_uri",
          "transaction_id",
          "message_id",
          "timestamp"
        ]
      },
      "message": {
        "type": "object",
        "properties": {
          "order": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "state": { "type": "string" },
              "provider": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "locations": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string" }
                      },
                      "required": ["id"]
                    }
                  }
                },
                "required": ["id"]
              },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "quantity": {
                      "type": "object",
                      "properties": {
                        "count": { "type": "integer" }
                      },
                      "required": ["count"]
                    }
                  },
                  "required": ["id", "quantity"]
                }
              },
              "billing": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "address": { "type": "string" },
                  "phone": { "type": "string" },
                  "email": { "type": "string" }
                },
                "required": ["name", "address", "phone"]
              },
              "payment": {
                "type": "object",
                "properties": {
                  "status": { "type": "string" }
                },
                "required": ["status"]
              },
              "fulfillments": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "type": { "type": "string" }
                  },
                  "required": ["id", "type"]
                }
              }
            },
            "required": ["id", "state", "provider", "items", "billing", "payment", "fulfillments"]
          }
        },
        "required": ["order"]
      }
    },
    "required": ["context", "message"]
  }
  